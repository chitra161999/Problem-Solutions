#include <iostream>
using namespace std;

int main() {
	
	int n;   // no. of  test cases
	int s;  //salary
	float g; //gross salary

	for(int i=0;i<n;i++)
	{	cin>>s;
	   if(s<1500)
	     g=s;     //  gross salary when hra  equal to 90% of the basic salary and da  equal to the basic salary 
	    if(s>=1500)
	      g=500+98/100*s;  // calaculate gross salary when hra = 500 and da = 98% of basic salary 
	      	 cout<<g; // print gross salary  
	  }
   	return 0;
}
